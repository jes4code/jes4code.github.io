---
import ServiceCard from "./ServiceCard.astro";
import { FaLaptopCode, FaBolt, FaRocket } from "react-icons/fa"; 
---

<section class="site-container mt-14 mx-auto max-w-6xl px-4">
	<h2
		class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-end"
	>
		<span class="hidden h-1.5 grow rounded-lg drop-shadow-[2px_2px_0_#0debd8] bg-[#7836cf] md:block"></span>
		<span class="drop-shadow-[2px_2px_0_#7836cf]">Servicios</span>
	</h2>

	<div class="mt-10 grid gap-6 md:grid-cols-3">
	<ServiceCard
		icon={FaRocket}
		title="Arquitectura y APIs"
		description="Diseño e implementación de APIs REST y servicios escalables (microservicios, integración, seguridad y buenas prácticas)."
	/>

	<ServiceCard
		icon={FaBolt}
		title="DevOps & Despliegue"
		description="Docker/Compose, Nginx reverse proxy y CI con GitHub Actions para entornos reproducibles y entregas confiables."
	/>

	<ServiceCard
		icon={FaLaptopCode}
		title="Calidad y Mantenimiento"
		description="Testing, validaciones, documentación (OpenAPI/Swagger) y código mantenible orientado a producción."
	/>
	</div>

</section>
